<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Add A Ingredient</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="recipe_id">SELECT AN RECIPE TO ADD AN INGREDIENT</label><br/>
    <select data-header="Select a recipe" id="recipe_id" name="recipe_id">
    <% if(recipes && recipes.length){ %>
      <% recipes.forEach(function(recipe){ %>
        <option class="recipeOptionSelect" data-icon="glyphicon-heart" value="<%= recipe.id %>">
          <%= recipe.title %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Add A Ingredient</h2>
<form action="1/createingredient" method="POST" class="form-horizontal" id="addIngredientForm">
  <div class="form-group">
    <label for="nameOfFoodItem" class="col-sm-2 control-label">Recipe Name of Food Item</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="nameOfFoodItem" name="nameOfFoodItem" placeholder="Recipe Name of Food Item" required>
    </div>
  </div>
  <div class="form-group">
    <label for="unitOfMeasurement" class="col-sm-2 control-label">Recipe Unit of Measurement</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="unitOfMeasurement" name="unitOfMeasurement" placeholder="Recipe Unit of Measurement" required>
    </div>
  </div>
  <div class="form-group">
    <label for="quantity" class="col-sm-2 control-label">Recipe Quantity</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Recipe Quantity" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Ingredient</button>
    </div>
  </div>
</form>
