<%- partial ('partials/statusmessage.ejs') %>

<h2>Delete Ingredient</h2>

<form action="#" method="GET">
  <div class="form-group">
    <label for="recipe_id">SELECT A RECIPE TO DELETE AN INGREDIENT</label><br/>
    <select data-header="Select a recipe" id="recipeList" name="recipe_id">
    <% if(recipes && recipes.length){ %>
      <% recipes.forEach(function(recipe){ %>
        <option class="recipeOptionSelect" data-icon="glyphicon-heart" value="<%= recipe.id %>">
          <%= recipe.title %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<table class="table table-striped table-bordered" id="deleteIngredientTable" style="width:100%">
  <thead>
    <tr>
      <th>Delete</th>
      <th>Quantity</th>
