<ol class="breadcrumb">
    <li><a href="/">Home</a></li>
    <li class="active">Add A Instruction</a></li>
</ol>

<br/>
<%- partial ('partials/statusmessage.ejs') %>

<form action="#" method="">
  <div class="form-group">
    <label for="recipe_id">SELECT AN RECIPE TO ADD AN INSTRUCTION</label><br/>
    <select data-header="Select a recipe" id="recipe_id" name="recipe_id">
    <% if(recipes && recipes.length){ %>
      <% recipes.forEach(function(recipe){ %>
        <option class="studentOptionSelect" data-icon="glyphicon-heart" value="<%= recipe.id %>">
          <%= recipe.title %>
        </option>
      <% }) %>
    <% } %>
    </select>
  </div>
</form>

<h2>Add A Instruction</h2>
<form action="/createinstruction" method="POST" class="form-horizontal" id="addInstructionForm">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">Recipe Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" name="title" placeholder="Recipe Title" required>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Add Recipe</button>
    </div>
  </div>
</form>
