<%- partial ('partials/statusmessage.ejs') %>

<h2>Recipes</h2>
<div class="container">
    <div class="flex-row row" id="recipecard">
        <% if(typeof recipes != "undefined" && recipes.length > 0){ %>
          <% recipes.forEach(function(recipe){ %>
              <!-- <div class="col-xs-6 col-sm-4 col-lg-3"> -->
                <!-- <div class="thumbnail"> -->
                  <div class="buttonContainer">
                      <button data-target-id="<%= recipe.id %>" class="btn btn-danger btn-xl displayButton" href="#"><%= recipe.title %></button>
                  </div>
                  <div class="caption">
                    <!-- <h3><%= recipe.title %></h2> -->

                    <div class="recipedialog" style="display: none" data-recipe-id="<%= recipe.id %>">
                      <p class="flex-text text-muted"><b>Description: </b><%= recipe.description %>
                      </p>
                      <p class="flex-text text-muted"><b>Number of Minutes: </b><%= recipe.numberOfMinutes %>
                      </p>
                       <p class="flex-text text-muted"><b>Ingredients:</b>
                          <ul>
                              <% for(var i=0; i<recipe.ingredients.length; i++) { %>
                                    <li>
                                        <%= recipe.ingredients[i].quantity %> <%= recipe.ingredients[i].unitOfMeasurement %> <%= recipe.ingredients[i].nameOfFoodItem %>
                                    </li>
                              <% } %>
                          </ul>
                      </p>
                      <p class="flex-text text-muted"><b>Instructions:</b>
                         <ul>
                             <% for(var i=0; i<recipe.instructions.length; i++) { %>
                                   <li>
                                       <%= recipe.instructions[i].instruction %>
                                   </li>
                             <% } %>
                         </ul>
                     </p>
                      <!-- <p class="flex-text text-muted"><b>Instructions:</b><%= recipe.instructions %> -->
                      </p>
                    </div>
                  </div>

                <!-- </div> -->

              <!-- </div> -->
      <% }) %>
    <% } %>
    </div>
</div>
